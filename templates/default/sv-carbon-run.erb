#!/bin/sh
exec chpst -u <%= node['graphite']['user_account'] %> -l <%= node['graphite']['storage_dir'] %>/carbon-<%= @options[:name] %>.lock \
         -- <%= node['graphite']['base_dir']%>/bin/carbon-<%= @options[:name] %>.py \
         --pid <%= node['graphite']['storage_dir'] %>/carbon-<%= @options[:name] %>-a.pid \
         --debug start 2>&1 >> <%= node['graphite']['log_dir'] %>/carbon-cache.log
